<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="HppDonatApp.Views.ReportsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HppDonatApp.Views"
    Title="Laporan dan Analisis">

    <Grid Padding="24" RowSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
            Text="Laporan dan Analisis HPP" 
            Style="{StaticResource TitleTextBlockStyle}"/>

        <!-- Filters -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="16">
            <StackPanel>
                <TextBlock Text="Tanggal Mulai" Style="{StaticResource BodyStrongTextBlockStyle}" Margin="0,0,0,8"/>
                <CalendarDatePicker x:Name="StartDatePicker" 
                    Date="{x:Bind ViewModel.StartDate, Mode=TwoWay}"/>
            </StackPanel>
            
            <StackPanel>
                <TextBlock Text="Tanggal Akhir" Style="{StaticResource BodyStrongTextBlockStyle}" Margin="0,0,0,8"/>
                <CalendarDatePicker x:Name="EndDatePicker" 
                    Date="{x:Bind ViewModel.EndDate, Mode=TwoWay}"/>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Jenis Laporan" Style="{StaticResource BodyStrongTextBlockStyle}" Margin="0,0,0,8"/>
                <ComboBox x:Name="ReportTypeCombo" 
                    ItemsSource="{x:Bind ViewModel.ReportTypes, Mode=OneWay}"
                    SelectedItem="{x:Bind ViewModel.SelectedReportType, Mode=TwoWay}"/>
            </StackPanel>

            <StackPanel VerticalAlignment="Bottom">
                <Button Command="{x:Bind ViewModel.GenerateReportCommand}" 
                    Content="Generate" Style="{StaticResource AccentButtonStyle}" Margin="0,0,0,0"/>
            </StackPanel>
        </StackPanel>

        <!-- Summary Cards -->
        <Grid Grid.Row="2" ColumnSpacing="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1" CornerRadius="8" Padding="16">
                <StackPanel Spacing="8">
                    <TextBlock Text="Total Batch" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock x:Name="TotalBatchesDisplay" Text="0" Style="{StaticResource HeaderTextBlockStyle}"/>
                    <TextBlock Text="Periode terpilih" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1" CornerRadius="8" Padding="16">
                <StackPanel Spacing="8">
                    <TextBlock Text="Total HPP" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock x:Name="TotalHPPDisplay" Text="Rp 0" Style="{StaticResource HeaderTextBlockStyle}"/>
                    <TextBlock Text="Seluruh batch" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1" CornerRadius="8" Padding="16">
                <StackPanel Spacing="8">
                    <TextBlock Text="Rata-rata HPP/Batch" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock x:Name="AverageHPPDisplay" Text="Rp 0" Style="{StaticResource HeaderTextBlockStyle}"/>
                    <TextBlock Text="Mean HPP" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="3" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1" CornerRadius="8" Padding="16">
                <StackPanel Spacing="8">
                    <TextBlock Text="Range HPP" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock x:Name="HPPRangeDisplay" Text="Rp 0 - Rp 0" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                    <TextBlock Text="Min - Max" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Report Content -->
        <Pivot Grid.Row="3" Margin="0,16,0,0">
            <!-- Detailed Report Tab -->
            <PivotItem Header="Laporan Detail">
                <ListView x:Name="DetailedReportListView"
                    ItemsSource="{x:Bind ViewModel.DetailedReportItems, Mode=OneWay}"
                    SelectionMode="Single">
                    <ListView.HeaderTemplate>
                        <DataTemplate>
                            <Grid Padding="12" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Tanggal" FontWeight="Bold"/>
                                <TextBlock Grid.Column="1" Text="Resep" FontWeight="Bold" Margin="8,0,0,0"/>
                                <TextBlock Grid.Column="2" Text="Batch" FontWeight="Bold" Margin="8,0,0,0"/>
                                <TextBlock Grid.Column="3" Text="Total HPP" FontWeight="Bold" Margin="8,0,0,0"/>
                                <TextBlock Grid.Column="4" Text="HPP/Unit" FontWeight="Bold" Margin="8,0,0,0"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.HeaderTemplate>
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="local:ReportItemModel">
                            <Grid Padding="12" BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}" BorderThickness="0,0,0,1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{x:Bind DateCreated}"/>
                                <TextBlock Grid.Column="1" Text="{x:Bind RecipeName}" Margin="8,0,0,0"/>
                                <TextBlock Grid.Column="2" Text="{x:Bind BatchCount}" Margin="8,0,0,0"/>
                                <TextBlock Grid.Column="3" Text="{x:Bind TotalHPP}" Margin="8,0,0,0"/>
                                <TextBlock Grid.Column="4" Text="{x:Bind HPPPerUnit}" Margin="8,0,0,0"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </PivotItem>

            <!-- Summary Report Tab -->
            <PivotItem Header="Ringkasan">
                <ListView x:Name="SummaryReportListView"
                    ItemsSource="{x:Bind ViewModel.SummaryReportItems, Mode=OneWay}">
                    <ListView.HeaderTemplate>
                        <DataTemplate>
                            <Grid Padding="12" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Resep" FontWeight="Bold"/>
                                <TextBlock Grid.Column="1" Text="Jumlah Batch" FontWeight="Bold" Margin="8,0,0,0"/>
                                <TextBlock Grid.Column="2" Text="Total HPP" FontWeight="Bold" Margin="8,0,0,0"/>
                                <TextBlock Grid.Column="3" Text="Rata-rata HPP" FontWeight="Bold" Margin="8,0,0,0"/>
                                <TextBlock Grid.Column="4" Text="Trend" FontWeight="Bold" Margin="8,0,0,0"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.HeaderTemplate>
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="local:SummaryReportModel">
                            <Grid Padding="12" BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}" BorderThickness="0,0,0,1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{x:Bind RecipeName}"/>
                                <TextBlock Grid.Column="1" Text="{x:Bind BatchCount}" Margin="8,0,0,0"/>
                                <TextBlock Grid.Column="2" Text="{x:Bind TotalHPP}" Margin="8,0,0,0"/>
                                <TextBlock Grid.Column="3" Text="{x:Bind AverageHPP}" Margin="8,0,0,0"/>
                                <TextBlock Grid.Column="4" Text="{x:Bind Trend}" Margin="8,0,0,0"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </PivotItem>

            <!-- Export Tab -->
            <PivotItem Header="Export">
                <StackPanel Spacing="16" Padding="16">
                    <TextBlock Text="Ekspor Laporan" Style="{StaticResource SubheaderTextBlockStyle}"/>
                    
                    <StackPanel Spacing="8">
                        <TextBlock Text="Format Ekspor" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                        <ComboBox x:Name="ExportFormatCombo" 
                            ItemsSource="{x:Bind ViewModel.ExportFormats, Mode=OneWay}"
                            SelectedIndex="0" Width="250"/>
                    </StackPanel>

                    <StackPanel Spacing="8">
                        <TextBlock Text="Pilihan Ekspor" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                        <CheckBox Content="Include grafik dan chart" IsChecked="True"/>
                        <CheckBox Content="Include data bahan per batch" IsChecked="True"/>
                        <CheckBox Content="Include analisis trend" IsChecked="True"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Command="{x:Bind ViewModel.ExportCommand}" Content="Ekspor" Style="{StaticResource AccentButtonStyle}"/>
                        <Button Command="{x:Bind ViewModel.PrintCommand}" Content="Cetak"/>
                    </StackPanel>
                </StackPanel>
            </PivotItem>
        </Pivot>
    </Grid>
</Page>
